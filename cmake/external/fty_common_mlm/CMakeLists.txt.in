cmake_minimum_required(VERSION 3.10)
include(ExternalProject)

project(fty_common_mlm)

ExternalProject_Add(fty_common_mlm
    GIT_REPOSITORY    https://github.com/42ity/fty-common-mlm.git
    GIT_TAG           "@VERSION@"
    GIT_SHALLOW       FALSE
    SOURCE_DIR        "@SRC_DIR@"
    BINARY_DIR        "@BUILD_DIR@"
    PREFIX            "@INSTALL_PREFIX@"
    CONFIGURE_COMMAND autoreconf -i "@SRC_DIR@" COMMAND "@SRC_DIR@/configure"
                        CXX=${CMAKE_CXX_COMPILER}
                        CC=${CMAKE_C_COMPILER}
                        PKG_CONFIG_PATH=@INSTALL_PREFIX@/lib/pkgconfig:@PKG_PATH@
                        "CXXFLAGS=-I@INSTALL_PREFIX@/include @EXTERN_CXXFLAGS@"
                        "LDFLAGS=-L@INSTALL_PREFIX@/lib @EXTERN_LDFLAGS@"
                        --prefix=@INSTALL_PREFIX@
    BUILD_COMMAND     make -j @NBJOBS@
    INSTALL_COMMAND   make install
)
