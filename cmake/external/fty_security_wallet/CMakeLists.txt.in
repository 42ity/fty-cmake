cmake_minimum_required(VERSION 3.10)
include(ExternalProject)

project(fty_security_wallet)

ExternalProject_Add(${PROJECT_NAME}
    GIT_REPOSITORY    https://github.com/42ity/fty-security-wallet.git
    GIT_TAG           "@VERSION@"
    GIT_SHALLOW       FALSE
    SOURCE_DIR        "@SRC_DIR@"
    BINARY_DIR        "@BUILD_DIR@"
    PREFIX            "@INSTALL_PREFIX@"
    CONFIGURE_COMMAND autoreconf -i "@SRC_DIR@" COMMAND "@SRC_DIR@/configure"
                        CXX=${CMAKE_CXX_COMPILER}
                        CC=${CMAKE_C_COMPILER}
                        PKG_CONFIG_PATH=@INSTALL_PREFIX@/lib/pkgconfig
                        CXXFLAGS=-I@INSTALL_PREFIX@/include
                        LDFLAGS=-L@INSTALL_PREFIX@/lib
                        --prefix=@INSTALL_PREFIX@
    BUILD_COMMAND     make -j @NBJOBS@
    INSTALL_COMMAND   make install
)
